<%= form_with(model: @product, url: (@product.new_record? ? 
    user_products_path(user_id: current_user.id) : 
    user_product_path(user_id: @product.user_id, 
    id: @product.id)), local: true) do |form| %>

<div class='form-group'>
  <%= form.label :product_name %>
  <%= form.text_field :product_name, class: 'form-control' %>
</div>

<div class='form-group'>
  <%= form.label :product_type %>
  <%= form.select :product_type, options_for_select(
    ['Clothes', 'Electronic', 'Health Care',
    'Home Decor', 'Grocery'], @product.product_type),
    prompt: 'Select Product Type', class: 'form-control'  %>
</div>

<div class='form-group'>
  <%= form.label :description %>
  <%= form.text_field :description, class: 'form-control'  %>
</div>

<div class='form-group'>
  <%= form.label :price %>
  <%= form.number_field :price, class: 'form-control'  %>
</div>

<div class='form-group'>
  <%= form.label :status %>
  <%= form.select :product_status, options_for_select(
    ['Active', 'Archived'], @product.product_status),
    prompt: 'Select Product status', class: 'form-control'  %>
</div>

<div class='actions'>
  <%= form.submit (@product.new_record? ? 'Create Product' : 'Update Product'),
  class: 'btn btn-success' %>
</div>

<% end %>
