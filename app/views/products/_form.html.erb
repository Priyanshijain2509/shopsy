<%= form_with(model: @product, url: (@product.new_record? ? 
        user_products_path(user_id: current_user.id) : 
        user_product_path(user_id: @product.user_id, 
        id: @product.id)), local: true) do |form| %>
  
    <div class="field">
      <%= form.label :product_name %>
      <%= form.text_field :product_name %>
    </div>
  
    <div class="field">
      <%= form.label :product_type %>
      <%= form.select :product_type, options_for_select(
        ['Clothes', 'Electronic', 'Health Care',
      'Home Decor', 'Grocery'], @product.product_type),
        prompt: 'Select Product Type' %>
    </div>
  
    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>
  
    <div class="field">
      <%= form.label :price %>
      <%= form.number_field :price %>
    </div>
  
    <div class="actions">
    <%= form.submit (@product.new_record? ? "Create Product" : "Update Product"), 
    class: 'btn btn-success' %>
    </div>
  <% end %>
  