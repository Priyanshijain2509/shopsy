<h1>Create page</h1>

<%= form_with(model: @product, local: true) do |f| %>

  <div class='field'>
    <%= f.label :item_name %><br />
    <%= f.text_area :item_name %>
  </div>

  <div class='field'>
    <%= f.label :item_type %><br />
    <%= f.select :role, options_for_select(['Clothes', 'Electronic', 'Grocery',
      'Health Care', 'Home Decor']), prompt: 'Select Item Type' %>
  </div>

  <div class='field'>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class='field'><br />
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>

  <%= f.submit 'Create', class: 'btn btn-primary' %>

<% end %>
