<p id="notice"><%= notice %></p>
<div class='back-button'>
  <%= link_to 'Back', :back, class: 'btn btn-info' %>
</div>
<% if current_user.role == 'seller' %>
  <%= link_to "Order list", order_list_path, 
    class: 'btn btn-primary', data: { product: @products } %>
  <%= link_to 'New Product', new_user_product_path(
      user_id: current_user.id), class: 'btn btn-primary' %>
<% end %>
<h1>All Products</h1>
<% if @products.empty? %>
  <p>No products posted yet.</p>
<% else %>
  <%= paginate @products %>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Product name</th>
          <th>Product type</th>
          <th>Description</th>
          <th>Price</th>
          <% if current_user.role == 'seller' %>
            <th>Quantity</th>
          <% end %>
          <th>Product status</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <% count = product.orders.where(status: 'Placed', product_id: product.id).count %>
          <tr>
            <td><%= product.product_name %></td>
            <td><%= product.product_type %></td>
            <td><%= product.description %></td>
            <td><%= product.price %><%= ' $ ' %></td>
            <% if current_user.role == 'seller' %>
              <td><%= product.quantity %></td>
            <% end %>
            <% if current_user.role == 'buyer' %>
              <td>
                <% if product.product_status == 'Active' %>
                  <%= render 'orders/order_button', product: product, user_id: product.user_id %>
                <% else %>
                  <%= content_tag :span, 'Out of stock', class: 'btn btn-info' %>
                <% end %>
              </td>
            <% else %>
              <td><%= product.product_status %></td>
              <td><%= link_to 'Edit', edit_user_product_path(
                  user_id: product.user_id, id: product.id), class: 'btn btn-warning' %>
              </td>
              <td><%= link_to 'Destroy', user_product_path(
                  user_id: product.user_id, id: product.id), method: :delete, 
                  data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>